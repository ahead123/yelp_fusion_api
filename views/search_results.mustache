{{>templates/_headerTemplate}}
<div class="col-md-12">

	<div>
		<h2 class="page-header">Search Results From Yelp!</h2>
		<h3>Here's your search results for {{term}} in the "{{category}}" category, in {{location}}!<h3>
	</div>

	<div data-example-id="striped-table">
	    <table class="table table-striped" class="display" cellspacing="0" width="100%">
	        <thead>	        	
	            <tr>
	                <th>Business Name</th>
	                <th>Address</th>	                
	                <th>Average Rating</th>
	                <th>Reviews</th>
	                <th>Price</th>
	                <th>Image</th>
	            </tr>	           
	        </thead>
	        <tbody>
	        {{#data}}
	        	{{#businesses}}
	        		{{^is_closed}}		          
	            <tr>	                
	                <td><a href="{{url}}" target="_blank">{{name}}</a></td>
	                <td>{{location.display_address}}</td>
	                <td>{{rating}}</td>
	                <td id="reviews">{{review_count}}</td>
	                <td>{{price}}</td>
	                <td>
	                	<a href="{{url}}" target="_blank">
	                		<img class="img-rounded" width="100" height="100" src="{{image_url}}"/>
	                	</a>
	                </td>
	            </tr> 
	            {{/is_closed}}
	          {{/businesses}} 
	         {{/data}}
	        </tbody>
	    </table>
	</div>
	
	<div class="footer">
		<div class="text-center">
			<h4><<a href="/">Back to Search</a></h4>
		</div>
	</div>
	
</div>
<script src="http://code.jquery.com/jquery-3.2.1.min.js"></script>
